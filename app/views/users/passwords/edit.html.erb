<div class="row" style="margin-top: 30px">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Archivist Password Reset</h2>
      </div>
      <div class="panel-body">
        <%= form_for resource, :as => :user, :url => user_password_path, :html => {:method => 'patch'}, :id => 'password-reset-form' do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
            <fieldset>
              <legend>Password Reset<% if resource.try(:first_name) %> for <%= resource.first_name %> <%= resource.last_name %><% end %></legend>

              <div class="form-group">
                <%= f.label :password,'Choose a new Password:' %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation,'Password Confirmation:' %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
              <%= f.submit 'Submit', class:'btn btn-primary' %>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
