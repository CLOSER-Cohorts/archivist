{
  "name": "archivist",
  "description": "Archivist is a cutting edge tool for documenting data collection in DDI.",
  "keywords": [
    "DDI",
    "editor",
    "questionnaire"
  ],
  "website": "https://wiki.ucl.ac.uk/display/CLOS/Archivist",
  "repository": "https://github.com/CLOSER-Cohorts/archivist",
  "scripts": {
    "postdeploy": "rails db:migrate"
  },
  "env": {
    "LANG": "en_GB.UTF-8",
    "MAX_THREADS": "5",
    "RACK_ENV": "production",
    "RAILS_ENV": "production",
    "RAILS_SERVE_STATIC_FILES": "enabled",
    "SECRET_KEY_BASE": "REDACTED",
    "WEB_CONCURRENCY": "1"
  },
  "addons": [
    "logentries:le_tryit",
    "sendgrid:starter",
    "heroku-redis:premium-1",
    "heroku-postgresql:standard-0",
    "process-scheduler:pet-project",
    "librato:development",
    "scheduler:standard",
    "ipinvestigator:free"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    }
  ]  
}
